                                                                                                                                                                                                        # Copy this file to .env and fill values for local development

# ============================================
# SUPABASE CONFIGURATION (Required)
# ============================================
# Get these from your Supabase project settings:
# Dashboard > Project Settings > API

SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_public_key
SUPABASE_SERVICE_KEY=your_supabase_service_role_key

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=5050
JWT_SECRET=replace_this_with_a_long_random_secret_minimum_32_characters

# ============================================
# OPTIONAL SETTINGS
# ============================================
# Skip database connection test at startup (useful for testing)
# SKIP_DB_TEST=true

# ============================================
# LEGACY DATABASE SETTINGS (Not used with Supabase)
# ============================================
# These are kept for reference but not used when using Supabase
# DB_USER=peerfusion_user
# DB_PASSWORD=peerfusion_password
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=peerfusion_db
